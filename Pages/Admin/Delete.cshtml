@page
@model MyEshop.Pages.Admin.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1 class="mt-3">Delete Product</h1>
<hr />
<form method="post">

    <dl class="dl-horizontal">
        <!-- Name -->
        <dt>
            <label asp-for="Product.Name"></label>
        </dt>
        <dd>
            <input asp-for="Product.Name" readonly class="form-control" />
            <span asp-validation-for="Product.Name"></span>
        </dd>

        <!-- Description -->
        <dt>
            <label asp-for="Product.Description"></label>
        </dt>
        <dd>
            <textarea asp-for="Product.Description" readonly class="form-control"></textarea>
            <span asp-validation-for="Product.Description"></span>
        </dd>

        <!-- Picture -->
        <dt>
            <Label>Picture</Label>
        </dt>
        
        <dd>
            <img src="/image/@(Model.Product.Id).jpg" style="max-width: 200px" />
        </dd>



        <!-- btn -->


        <dd>
            <input type="hidden" asp-for="Product.Id" />
            <input type="submit" class="btn btn-danger" value="Delete" />
        </dd>
    </dl>
</form>