@model IEnumerable<ShowGroupViewModel>

<ul class="list-group">
    @foreach (var item in Model)
    {
        <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            <a href="/Group/@item.GroupId/@item.Name">@item.Name</a>
            <span class="badge rounded-pill bg-primary">@item.ProductCount</span>
        </li>

    }
</ul>